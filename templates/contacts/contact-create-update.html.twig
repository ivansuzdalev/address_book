{% extends 'base.html.twig' %}

{% block title %}Create Task{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}
    <div class="container fill">

        <h1 class="h3 mb-3 font-weight-normal">Create: {{ userName }} contact</h1>
        
        <div>

            <form method = "POST" action="{{ path('contact_create_update_api') }}">
                {% if contactOb.id %} 
                    <input type="hidden" name="id" id="id" class="form-control" value={{contactOb.id}}>
                {% endif %}
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" class="form-control" value={{contactOb.title}} required>
                </div>
                <div class="form-group">
                    <label for="comment">comment</label>
                    <input type="text" name="comment" id="comment" class="form-control" value={{contactOb.comment}} required>
                </div>
                <div class="form-group">
                    <label for="phone">phone</label>
                    <input type="text" name="phone" id="phone" class="form-control" value={{contactOb.phone}} required>
                </div>
                <div class="form-group">
                    <label for="full_name">fullname</label>
                    <input type="text" name="full_name" id="full_name" class="form-control" value={{contactOb.fullname}} required>
                </div>
                <div class="form-group">
                    <label for="address">address</label>
                    <input type="text" name="address" id="address" class="form-control" value={{contactOb.address}} required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary" type="submit">
                        {% if contactOb.id %} 
                            {{'Update'}}
                        {% else %} 
                            {{'Create'}}
                        {% endif %}
                    </button>
                </div>
            </form>
        </div>
    
    </div>


{% endblock %}